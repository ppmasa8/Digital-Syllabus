<%= render 'layouts/search', syllabus: @syllabuses %>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <table class="table table-bordered table-striped">
      <thead>
      <tr>
        <th style="width: 10%">科目番号<br>科目名</th>
        <th style="width: 8%">単位数<br>履修年次</th>
        <th style="width: 10%">科目群</th>
        <th style="width: 10%">科目試験<br>出題者<br>/文責</th>
        <th style="width: 11%">スクーリング</th>
        <th style="width: 12%">使用教科書</th>
        <th style="width: 29%">授業の概要</th>
        <th style="width: 10%" colspan="7"></th>
      </tr>
      </thead>

      <tbody>
      <% @syllabuses.each do |syllabus| %>
        <tr>
          <td><%= syllabus.subject %></td>
          <td><%= syllabus.unit_and_course_int %></td>
          <td><%= syllabus.subject_type %></td>
          <td><%= syllabus.teacher %></td>
          <td><%= syllabus.schooling %></td>
          <td><%= syllabus.textbook %></td>
          <td><%= syllabus.summary %></td>
          <td>
            <a href="<%= image_url("#{syllabus.id}.pdf") %>" target="_blank">詳細</a>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <br>
    <div class="mt-2 mb-4">
      <%= paginate @syllabuses %>
    </div>

  </div>
  <div class="col-md-1"></div>
</div>

